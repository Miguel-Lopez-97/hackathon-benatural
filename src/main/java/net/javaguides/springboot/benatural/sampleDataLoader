package net.javaguides.springboot.benatural.model;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import javax.annotation.PostConstruct;
import java.util.List;


@Component
public class SampleDataLoader {
    private ProductRepository productRepository;

    @Autowired
    public SampleDataLoader(ProductRepository productRepository) {
        this.prodcutRepository = productRepository;
    }

    @PostConstruct
    public void loadSampleData() {
        productRepository.saveAll(List.of(

        new product (Facial Recover Serum, Say hello to our Facial Recovery Serum! Our hydrating, nutrient filled Facial Recovery Serum has a light consistency for speedy absorption, and infuses detoxifying Super Green extracts of Kale, Spirulina and Parsley, Serum, 50),

        new product (Nutrient Rich Facial, Our Nutrient Rich Facial Moisturizer is perfect for you! It is enriched with Super Greens extracts of Kale, Spirulina, Parsley and Chlorella to give your skin a nutrient boost to promote a radiant, glowing and healthy complexion., Mistourizer, 50 ),

        new product (Signature Antioxidant Eye,  Did you know that fine lines around the eyes are some of the first signs of aging on the face? Fight the signs of premature aging with our fragrance free, Antioxidant Eye Serum! A blend of Plant Extracts including Aloe Vera, Cucumber and Burdock, Serum, 50),



        ));

    }

